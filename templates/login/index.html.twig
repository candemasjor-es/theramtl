{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block body %}
{% include 'menu.html.twig' %}
<article class="container text-center text-light p-4" style="background-color:#757575;">
    <h1 class="mb-5">Mi Cuenta</h1>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('app_login') }}" method="post">
        <div class="form-group mb-3">
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required autofocus placeholder="Correo electrónico"/>
        </div>
        <div class="form-group mb-3">
            <input class="form-control" type="password" id="password" name="_password" required placeholder="Contraseña"/>
        </div>
        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="d-grid gap-1">
            <button class="btn btn-dark btn-block" type="submit">Acceso</button>
        </div>
    </form>
</article>
{% endblock %}
